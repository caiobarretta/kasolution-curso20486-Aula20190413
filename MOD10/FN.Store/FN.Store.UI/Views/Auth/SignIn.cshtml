@model SignInVM

@*@{
		var teste = ViewData.ModelState;
	}*@

<h2>Autenticação</h2>

<form method="post">

	<div asp-validation-summary="All"></div>

	<div class="form-group">
		<label>Email</label>
		@Html.TextBoxFor(m => m.Email, new { @class = "form-control", @autofocus = "" })
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label>Senha</label>
		<input type="password" asp-for="Senha" name="senha" class="form-control">
		<span asp-validation-for="Senha" class="text-danger"></span>
	</div>

	<div>
		<button class="btn btn-outline btn-info" type="submit">Acessar</button>
		<a class="btn btn-outline btn-warning" asp-controller="Home" asp-action="Index">Cancelar</a>
		@*@Html.ActionLink("Cancelar", "Index", "Home",  new { }, new { @class = "btn btn-outline btn-warning" } )*@
	</div>
</form>

@section scripts {
	<script src="~/js/jquery.validate.js"></script>
	<script src="~/js/jquery.validate.unobtrusive.js"></script>
}